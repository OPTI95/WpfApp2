<Window x:Class="WpfApp2.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0 5"/>

            <TextBlock Text="Category:"/>
            <TextBox x:Name="CategoryTextBox" Margin="0 5"/>

            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0 5"/>

            <TextBlock Text="Unit:"/>
            <TextBox x:Name="UnitTextBox" Margin="0 5"/>

            <TextBlock Text="Manufacturer:"/>
            <TextBox x:Name="ManufacturerTextBox" Margin="0 5"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="PriceTextBox" Margin="0 5"/>

            <TextBlock Text="In Stock:"/>
            <CheckBox x:Name="InStockCheckBox" Margin="0 5" IsChecked="True"/>

            <Button Content="Add" Click="AddButton_Click" HorizontalAlignment="Center" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
